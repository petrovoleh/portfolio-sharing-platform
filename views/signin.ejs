<% layout('layout/main') -%>
<% block('title', 'Signin') -%>
<div class="col-12 signin d-flex justify-content-center">
  <h1>Sign in</h1>
</div>
<form class="signin" action="/login" method="post">
  <input class="input" type="text" name="login" placeholder="Your email or phone number">
  <input class="input" type="password" name="password" placeholder="Your password">
  <button class="signin" type="submit">Sign in</button>
  <div class="loginstatus" id="loginstatus"><%=loginstatus%></div> <!-- Added div for login status -->
</form>

